
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>





<div  class="Sign_up">
        <div class="content">
            <h4 style="    text-align: center;    color: #26a69a !important;">Sign in</h4>
            <div class="row">
                <form class="col s12">
                    <div class="row">
                        <div class="col s12">
                            <div class="input-field ">
                                <i class="material-icons prefix">person</i>
                                <%= f.email_field :email, autofocus: true, id: :icon_person  %>

                                <label for="icon_person">Email</label>
                            </div>
                        </div>
                        <div class="col s12">
                            <div class="input-field ">
                                <i class="material-icons prefix">lock</i>

                                <%= f.password_field :password, autocomplete: "off", id: :icon_lock  %>
                                <label for="icon_lock">Passwod</label>
                            </div>
                        </div>
                        <div class="col s12">
                            <div class="input-field ">
                              <%= f.submit "Sign in" , class:"waves-effect waves-light btn "  %>      |            <%= render "devise/shared/links" %>

                            </div>
                        </div>
                    </div>



                </form>
            </div>
        </div>
    </div>
    <% end %>
