<% if current_user.productowner == true %>



<div class="container">
  <h2>Analytics For Product Owner</h2>
  <table class="table">
    <thead>
      <tr>
        <th>Name company</th>
        <th>City</th>
        <th>Size of companies</th>
        <th>position </th>
        <th>Turnovers Count </th>
      </tr>
    </thead>
    <tbody>
      <% @turnovers.each do |turnover| %>

      <tr>
        <td><%= turnover.name_company %></td>
        <td><%= turnover.user.city %> </td>
        <td><%= turnover.user.workers %> </td>
        <td><%= turnover.position %></td>
        <td><%= @turnovers.count %></td>
      </tr>
  <% end %>
    </tbody>
  </table>
</div>

 <% else%>
<h1> Not Found ! </h1>
<% end %>
